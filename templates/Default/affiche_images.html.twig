{% if entree.images|length > 0 %}
<ul id="galerie{{ entree.id }}" class="galerie media-list">
{% for  image in entree.images %}
    <li class="media">
        <a href="{{ asset('uploads/pieces_jointes/' ~ image.path) }}">
            <img class="img-responsive" src="{{ asset('uploads/pieces_jointes/' ~ image.path) | imagine_filter('my_thumb') }}" alt="{{ image.id }}" />
        </a>
    </li>
{% endfor %}
</ul>
{% endif %}
