        <p>
            <a href="{{ path('app_piecejointe_add') }}" role="button">{{ 'piecejointe.creer'|trans() }}</a>
        </p>
{% if images|length > 0 %}
        <div class="col-lg-4 list-group">
            {% for image in images %}
            <div class="list-group-item">
                <p>{{ image.libelle }}
                    <a href="{{ path('app_piecejointe_edit', { 'image': image.id }) }}" role="button" title="{{ 'modifier'|trans() }}">{{ 'modifier'|trans() }}</a>&nbsp;&nbsp;
                    <a href="{{ path('app_piecejointe_delete', { 'image': image.id }) }}" role="button" title="{{ 'supprimer'|trans() }}">{{ 'supprimer'|trans() }}</i></a>
                </p>
            </div>
            {% endfor %}
        </div>
{% else %}
<div class="row text-danger">
