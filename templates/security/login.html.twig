{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="content mt-4" style="padding-left: 20%;padding-right:20%;">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <h1>{{ 'authentification'|trans }}</h1>
            <div class="field">
                <p class="control has-icons-left">
                    <input
                            class="input"
                            type="email"
                            placeholder="{{ 'email'|trans }}"
                            value="{{ last_username }}"
                            name="email"
                            id="inputEmail"
                            required
                            autofocus>
                    <span class="icon is-small is-left"><i class="fas fa-envelope"></i></span>
                </p>
            </div>
            <div class="field">
                <p class="control has-icons-left">
                    <input
                            class="input"
                            type="password"
                            placeholder="{{ 'password'|trans }}"
                            name="password"
                            id="inputPassword"
                            required>
                    <span class="icon is-small is-left"><i class="fas fa-lock"></i></span>
                </p>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />

            <div class="field">
                <p class="control">
                    <button class="button is-success" type="submit">{{ 'se_connecter'|trans }}</button>
                </p>
            </div>
        </form>
    </div>
{% endblock %}
